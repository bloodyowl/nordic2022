{
  "include": ["src"],
  "compilerOptions": {
    "module": "ES2015",
    "target": "ES2015",
    "lib": ["DOM", "DOM.Iterable", "ES2017"],
    "moduleResolution": "Node",
    "outDir": "dist/",
    "jsx": "react-jsx",

    "allowJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,

    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true
  }
}